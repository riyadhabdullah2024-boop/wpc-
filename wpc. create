<script>
const offersData = {
  villa: [
    { title: "Villa 1", img: "https://images.unsplash.com/photo-1568605114967-8130f3a36994" },
    { title: "Villa 2", img: "https://images.unsplash.com/photo-1600585152915-d208bec867a1" },
    { title: "Villa 3", img: "https://images.unsplash.com/photo-1599423300746-b62533397364" }
  ],
  apartment: [
    { title: "Apartment 1", img: "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267" },
    { title: "Apartment 2", img: "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688" },
    { title: "Apartment 3", img: "https://images.unsplash.com/photo-1493809842364-78817add7ffb" }
  ],
  hotel: [
    { title: "Hotel 1", img: "https://images.unsplash.com/photo-1542314831-068cd1dbfeeb" },
    { title: "Hotel 2", img: "https://images.unsplash.com/photo-1551882547-ff40c63fe5fa" },
    { title: "Hotel 3", img: "https://images.unsplash.com/photo-1566073771259-6a8506099945" }
  ]
};

function filterOffers(type) {
  const offersContainer = document.getElementById("offers");
  offersContainer.innerHTML = "";

  offersData[type].forEach(item => {
    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `
      <img src="${item.img}">
      <h4>${item.title}</h4>
    `;
    offersContainer.appendChild(card);
  });
}
</script>

